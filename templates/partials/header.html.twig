{# Header / navigation partagé pour tout le site #}
<header class="site-header">
  <div class="container">
    <a class="brand" href="{{ path('homepage') }}">
      <div class="brand-logo" aria-hidden="true">logo</div>
      <div class="brand-title">gestionRDV</div>
    </a>

    <nav id="mainNav" class="site-nav" role="navigation">
      {% if app.user %}
        {# Utilisateur connecté #}
        <a href="">Prendre RDV</a>
        <span>{{ app.user.prenom }} {{ app.user.nom }}</span>
        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-danger">Déconnexion</a>
      {% else %}
        {# Utilisateur non connecté #}
        <a href="">Prendre RDV</a>
        <a href="{{ path('app_login') }}" class="btn btn-sm btn-primary">Connexion</a>
      {% endif %}
    </nav>
  </div>
</header>