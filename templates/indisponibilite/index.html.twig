{% extends 'base.html.twig' %}

{% block title %}Indisponibilités{% endblock %}

{% block body %}
<h1>Mes indisponibilités</h1>

<a class="btn btn-primary" href="{{ path('indisponibilite_new') }}">Nouvelle indisponibilité</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Début</th>
            <th>Fin</th>
            <th>Motif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for i in indisponibilites %}
        <tr>
            <td>{{ i.debut ? i.debut|date('Y-m-d H:i') : '' }}</td>
            <td>{{ i.fin ? i.fin|date('Y-m-d H:i') : '' }}</td>
            <td>{{ i.motif }}</td>
            <td>
                <a class="btn btn-sm btn-secondary" href="{{ path('indisponibilite_edit', {'id': i.id}) }}">Edit</a>
                <form method="post" action="{{ path('indisponibilite_delete', {'id': i.id}) }}" style="display:inline-block" onsubmit="return confirm('Supprimer ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ i.id) }}">
                    <button class="btn btn-sm btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="4">Aucune indisponibilité</td></tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
