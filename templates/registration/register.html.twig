{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Créer un compte</h1>

        {# Affichage global des erreurs du formulaire #}
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg'}}) }}

            {# Champ de sélection du rôle (ajouté dans RegistrationFormType) #}
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(registrationForm.userType) }}</label>
                {{ form_widget(registrationForm.userType, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(registrationForm.userType) }}
            </div>

            {# CHAMPS COMMONS DE L'ENTITÉ USER #}

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(registrationForm.nom, 'Nom') }}</label>
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(registrationForm.nom) }}
            </div>
            
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(registrationForm.prenom, 'Prénom') }}</label>
                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>

     

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(registrationForm.email, 'Adresse Email') }}</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(registrationForm.plainPassword, 'Mot de passe') }}</label>
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': 'Mot de passe'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': 'Confirmer le mot de passe'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            
            <div class="mb-6">
                <label class="flex items-center text-sm font-bold text-gray-700">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2 leading-tight'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions') }}
                </label>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150">
                    S'inscrire
                </button>
            </div>
            
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}