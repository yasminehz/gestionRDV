{% extends 'base.html.twig' %}

{% block title %}Mes assistants{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes assistants</h1>
        <a href="{{ path('app_accueil') }}" class="btn btn-outline">Retour à l'accueil</a>
    </div>

    {% if assistants is empty %}
        <div class="alert alert-info">
            <p class="mb-0">Vous n'avez pas encore d'assistants.</p>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        
                    </tr>
                </thead>
                <tbody>
                    {% for assistant in assistants %}
                    <tr>
                        <td>{{ assistant.nom }}</td>
                        <td>{{ assistant.prenom }}</td>
                        <td>{{ assistant.email }}</td>
                        
                        
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
